<% content_for :header do %>
  <div class="wrapper">
          <h2><%= link_to image_tag("logo.svg", :width=>"295", :height=>"32"), root_path%></h2><br />
          <p>Descubre los Aljibes de San Esteban de la Litera</p>
        </div><!-- .wrapper -->
        <div class="single-title">
          <h1><%=@tank.title%></h1>
        </div>
<% end %>

<div class="wrapper">
      <% unless @tank.photos.empty? %>
        <div class="single-image">
          <%= image_tag @tank.main_photo(:medium), id: 'header_img', :alt => @tank.title %>
          <div class="image-selector">
            <% @tank.photos.each do |photo|%>
            <a href="<%=photo.image.url(:medium)%>" class="item"><%= image_tag photo.image.url(:thumb) %></a>
            <%end%>
          </div>
        </div><!-- .single-image -->

      <%end%>

        <div class="single-content">
          <%if @tank.route%>
            <% if @tank.route.id == 1%>
            <div class="belong-route"><span class="label green"><%=link_to raw('Pertenece a<br />ruta <strong>1</strong>') ,route_path(@tank.route)%></span></div>
            <% elsif @tank.route.id == 2%>
            <div class="belong-route"><span class="label purple">Pertenece a<br />ruta <strong>2</strong></span></div>
            <%end%>
          <%end%>
          <div class="content" id="description" data-latitude="<%= @tank.latitude %>" data-longitude="<%= @tank.longitude %>">
            <%=@tank.description%>
          </div>
          <div id="map-canvas" style="height: 300px; weight:100%">
            </div>
        </div><!-- .single-content -->


