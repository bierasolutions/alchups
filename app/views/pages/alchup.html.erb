<% content_for :title do %>
<%=@tank.title%>
<% end %>
<% content_for :header do %>
  <div class="wrapper">
          <h2><%= link_to image_tag("logo.svg", :width=>"295", :height=>"32"), root_path%></h2><br />
          <p>Descubre los Aljibes de San Esteban de la Litera</p>
        </div><!-- .wrapper -->
        <div class="single-title">
          <h1><%=@tank.title%></h1>
        </div>
<% end %>

<div class="wrapper">
      <% unless @tank.photos.empty? %>
        <div class="single-image">
          <%= image_tag @tank.main_photo(:large), id: 'header_img', :alt => @tank.title %>
          <div class="image-selector">
            <% @tank.photos.each do |photo|%>
            <a href="<%=photo.image.url(:large)%>" class="item"><%= image_tag photo.image.url(:thumb) %></a>
            <%end%>
          </div>
        </div><!-- .single-image -->

      <%end%>

        <div class="single-content">
          <%if @tank.route%>
            <div class="belong-route"><span class="label ruta<%=@tank.route.id%>"><%=link_to raw('Pertenece a<br />ruta <strong>1</strong> &gt;') ,route_path(@tank.route)%></span></div>
          <%end%>
          <div class="content" id="description" data-latitude="<%= @tank.latitude %>" data-longitude="<%= @tank.longitude %>">
            <%=simple_format (@tank.description)%>
            <br/><br/>
            <div id="map-canvas" class="map">
            </div>
          </div>
        </div><!-- .single-content -->


        <div class="close-alchups">
          <h2>Otros aljibes</h2>
          <div class="close-alchups-items">
            <%@other.each do |tank|%>
            <a href="<%=alchup_path(tank)%>" class="item">
              <h4><%=tank.title%><i class="icon-arrow-right3"></i></h4>
              <img src="<%=tank.main_photo(:medium)%>" alt="<%=tank.title%>">
            </a>
            <%end%>
          </div>
        </div><!-- .close-alchups-->

        <div class="routes">
          <div class="route">
            <span class="label">Ruta <strong>1</strong></span>
            <h2>De los lavaderos a las Forcas</h2>
            <p><%=image_tag "home-ruta1.png", :alt=>"Fotografías de la Ruta 1"%></p>
            <a href="<%=route_path(1)%>" class="btn primary">Quiero conocer esta ruta <span class="arrow">›</span></a>
          </div><!-- .route -->
          <div class="route">
            <span class="label">Ruta <strong>2</strong></span>
            <h2>De Perera a la Heredad</h2>
            <p><%=image_tag "home-ruta2.png", :alt=>"Fotografías de la Ruta 2"%></p>
            <a href="<%=route_path(2)%>" class="btn primary">Quiero conocer esta ruta <span class="arrow">›</span></a>
          </div><!-- .route -->
        </div>  
      </div><!-- .wrapper -->
